@if (Model.Products != null && Model.Products.Any())
{
	foreach (var product in Model.Products)
	{
		if (product.Category == "shawarma")
		{
			<p>@product.Name</p>
			foreach (var i in product.PortionPrice)
			{
				<p>Portion @i.Key | Price: @i.Value</p>
			}
			<p>@product.ImageUrl</p>
		}
