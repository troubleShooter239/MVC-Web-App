<script>
    function scrollToElement(id) {
        const element = document.getElementById(id);

        if (element) {
            const elementPosition = element.offsetTop;
            const duration = 1000; // Продолжительность скроллинга в миллисекундах
            const start = window.pageYOffset; // Текущая позиция скролла
            const distance = elementPosition - start; // Расстояние, которое нужно проскроллить
            let startTime = null;

            function animation(currentTime) {
                if (startTime === null) {
                    startTime = currentTime;
                }

                const timeElapsed = currentTime - startTime;
                const run = ease(timeElapsed, start, distance, duration);
                window.scrollTo(0, run);

                if (timeElapsed < duration) {
                    requestAnimationFrame(animation);
                }
            }

            function ease(t, b, c, d) {
                // Функция плавности скролла
                t /= d / 2;
                if (t < 1) return c / 2 * t * t + b;
                t--;
                return -c / 2 * (t * (t - 2) - 1) + b;
            }

            requestAnimationFrame(animation);
        }
    }
</script>
