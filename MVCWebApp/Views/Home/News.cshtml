        /* Стили для примера - можно заменить на свои */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .news h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .news p {
