@{
  Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true" />
</head>

<body>
  <div class="container">
    <div class="left-panel">
      <div class="tabs">
        <button id="profileButton" class="button-panel active">Profile</button>
        <button id="confidentialityButton" class="button-panel">Confidentiality</button>
        <button id="orderHistoryButton" class="button-panel">Order History</button>
      </div>
    </div>

    <div class="content">
      <img class="circle-image" src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/62127/penguin.jpg" alt="Tyler">
      <div class="input-field-container">
        <div class="input-field">
          <label for="firstName">First Name:</label>
          <input type="text" id="firstName" name="firstName">
        </div>

        <div class="input-field">
          <label for="lastName">Last Name:</label>
          <input type="text" id="lastName" name="lastName">
        </div>

        <div class="input-field">
          <label for="middleName">Middle Name:</label>
          <input type="text" id="middleName" name="middleName">
        </div>

        <div class="input-field">
          <label for="phoneNumber">Phone Number:</label>
          <input type="tel" id="phoneNumber" name="phoneNumber">
        </div>

        <div class="input-field">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email">
        </div>
      </div>
      <div class="container-save-button">
        <button id="saveButton" class="save-button">Save</button>
      </div>
    </div>
  </div>

  <script src="~/js/Profile.js"></script>
</body>

</html>
